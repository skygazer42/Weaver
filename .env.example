# API Keys / 模型配置
OPENAI_API_KEY=sk-...
# 自定义 OpenAI 兼容网关（留空则用官方）：示例 https://api.openai.com/v1
OPENAI_BASE_URL=
# 是否使用 Azure OpenAI：true/false
USE_AZURE=false
AZURE_API_KEY=
AZURE_ENDPOINT=
AZURE_API_VERSION=2025-03-01-preview
# LLM 请求超时时间（秒）
OPENAI_TIMEOUT=60
# 额外请求体（JSON 字符串，留空则忽略）
OPENAI_EXTRA_BODY={}

TAVILY_API_KEY=tvly-...
E2B_API_KEY=e2b_...
ANTHROPIC_API_KEY=sk-ant-...
# 记忆/存储（可选，支持 mem0，未安装时退回本地 JSON）
MEM0_API_KEY=
ENABLE_MEMORY=false
MEMORY_NAMESPACE=default
MEMORY_USER_ID=default_user
MEMORY_MAX_ENTRIES=20
MEMORY_TOP_K=5

# Database
DATABASE_URL=postgresql://manus:manus_dev_password@localhost:5432/manus_db

# App Config
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# LangGraph 中断节点（逗号分隔，例如 writer,human_review）
INTERRUPT_BEFORE_NODES=

# Logging Configuration / 日志配置
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=logs/weaver.log
# 单个日志文件最大大小（字节，默认10MB）
LOG_MAX_BYTES=10485760
# 保留的历史日志文件数量
LOG_BACKUP_COUNT=5
# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s
# 是否启用文件日志
ENABLE_FILE_LOGGING=true
# 是否启用 JSON 格式日志（便于日志分析工具）
ENABLE_JSON_LOGGING=false

# LangGraph Controls
HUMAN_REVIEW=false
TOOL_APPROVAL=false
MAX_REVISIONS=2

# MCP (optional)
ENABLE_MCP=false
MCP_SERVERS={}
