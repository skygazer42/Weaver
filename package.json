{
  "name": "manus-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd web && npm run dev",
    "dev:backend": "uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "cd web && npm run build",
    "install:all": "npm install && cd web && npm install && cd .. && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
